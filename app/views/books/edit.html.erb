<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>

<div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

  <%= f.label :body %>
  <%= f.text_area :body %>
</div>

  <h4></h4>
  <%= f.submit 'Create Book' %>

<% end %>

<%= link_to "Show" ,book_path(@book.id)%> |
<%= link_to "Back" ,books_path(@book.id)%>

